.contents

  /左側
  .left
    /ユーザー名表示
    .user
      .user__name
        %p.user__name__item
          = current_user.name
      .user__link
        %ul
          /新規チャットグループ作成
          =link_to new_group_path do
            %li.fa.fa-pencil-square-o

          /アカウント編集
          =link_to edit_user_path(current_user) do
            %li.fa.fa-cog

    /グループ表示
    .group
      = render partial: "groups/group", locals:{groups: @groups}

  /右側
  .right
    /グループ名表示箇所
    .header
      .header__block
        .header__block__title sampleグループ
        .header__block__member MEMBER: TestTarou
      .header__edit
        =link_to "Edit", root_path, class: "header__edit__text"
    /チャット表示箇所
    .main
      .main__post
        .main__post__name TestTarou
        .main__post__time 2017/11/1 12:00:00
        .main__post__text 投稿文
    /入力箇所
    .footer
      .footer__inner
        .footer__inner__form
          .footer__inner__form__block
            %form
              %input{class:'footer__inner__form__block__btn',type: 'text', placeholder: 'type a message'}
          %label.footer__inner__form__icon
            %i.fa.fa-picture-o
            %input{class:'hidden', type: 'file',}
        .footer__inner__send
          %input{class:'footer__inner__send__btn', type: 'submit', value: 'Send'}
